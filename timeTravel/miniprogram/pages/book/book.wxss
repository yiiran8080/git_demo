/* miniprogram/pages/book/book.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.sub-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}
.header{
  position: fixed;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}
.box{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999;
}
.box image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
  margin-top:3rpx ;
}
.books-container{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
}
.books-container book-cmp{
  margin-bottom: 10rpx;
}

.head-img{
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}
.head-img image{
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}
